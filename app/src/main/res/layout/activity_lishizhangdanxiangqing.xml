<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_lishizhnagdnaxiangqing_fanhui"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/e_btn_join" />

        </RelativeLayout>

        <TextView
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="历史账单"
            android:gravity="right"
            android:textColor="#323232"
            android:textSize="16sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"

            android:visibility="invisible"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/c_a_a_bg_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_start_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:text="2017-5-1"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:text="至"
                />
            <TextView
                android:id="@+id/tv_end_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:text="2017-5-30"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_zonglirun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:textColor="#ffffff"
            android:text="8888"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="本轮总利润（元）"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="本轮每日最高收入（元）"
            android:textColor="#323232"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_zuigaoshouru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="888"
            android:textColor="#323232"
            android:textSize="40sp"
            android:visibility="visible" />
<LinearLayout
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/quxiantu"
    android:orientation="horizontal">
    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="210dp">

    </com.github.mikephil.charting.charts.LineChart>

</LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
